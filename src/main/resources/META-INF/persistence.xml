<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="Noorderzon_data">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>application.Artiest</class>
        <class>application.Locatie</class>
        <class>application.Tijd</class>
        <class>application.Voorstelling</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/..." />
            <property name="javax.persistence.jdbc.user" value="..." />
            <property name="javax.persistence.jdbc.password" value="..." />
        </properties>
    </persistence-unit>
</persistence>